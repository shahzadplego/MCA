@model mca.web.Models.LoginViewModel

@{
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

@using (Html.BeginForm("Login", "Account"))
{
    <div class="container-fluid login-box">
        <div class="container">
            <div class="row">
                <div class="col-md-6 col-sm-8 content">
                    <img class="img-responsive" src="~/Images/logo-png.png" alt="mca-corporation">
                    <h1>USER LOGIN</h1>
                    <div class="login-feild">
                        <div class="form-group">
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "Email", autofocus="autofocus" })
                        </div>
                        <div class="form-group">
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Password", @style = "padding-top: 6px;" })
                        </div>
                        <div class="button">
                            <button type="submit" class="button">Submit</button>
                        </div>
                        <div class="forget-error">
                            <a href="javascript:;">Forgot Password? Click Here</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
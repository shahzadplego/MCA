@model IEnumerable<System.Web.Mvc.SelectListItem>

<div class="result-heading">
    <div class="heading-r">
        <h2>@ViewBag.Header</h2>
    </div>

    @if (Model != null && Model.Count() > 0)
    {
        int i = 0;
        foreach (var item in Model)
        {
            if (i == 0 || i % 3 == 0)
            {
                @Html.Raw("<div class='row'>");
            }

            <div class="col-md-4 col-sm-4 col-xs-12">
                <div class="view view-fifth">
                    <div class="bg-box default-box-style">
                        <h1>@item.Value</h1>
                        <h2>
                            @item.Text
                        </h2>
                    </div>
                    <a href="@Url.Action("Detail", "Products", new { productID = item.Value })">
                    <div class="mask">
                    <div class="bg-box-red default-box-style">
                    <h1>@item.Value</h1>
                    <h2>
                    @item.Text
                    </h2>
                    </div>
                    </div>
                    </a>
                </div>
            </div>
            if (i % 3 == 2 || i == Model.Count() - 1)
            {
                @Html.Raw("</div>")
            }
            i = i + 1;
        }
    }
</div>
